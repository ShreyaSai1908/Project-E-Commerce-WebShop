@model PlaceOrderViewModel

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
<div class="row">
    <table class="table table-hover" >
        <thead class="thead-dark">
            <tr>
                <th scope="col">Product</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
            </tr>            
        </thead>
        <tbody>
            @foreach (var cart in Model.ShoppingCart) 
            {
                var imgSrc = "/img/" + cart.Product.ProductName + ".png";
                <tr>
                    <td>                    
                        <div class="row">
                            <div class="card col-sm-2" style="width: 18rem;">
                                <img class="card-img-top rounded mx-auto d-block" src=@imgSrc alt="Card image cap" height="30" width="30" />
                            </div>
                            <div class="card-body col-sm-10">
                                <h5 class="card-title">@cart.Product.ProductName</h5>
                                <p class="card-text">@cart.Product.Description</p>
                            </div>
                        </div>
                    </td>
                    <td>@cart.Product.Price</td>
                    <td>@cart.ProductQty</td>
                </tr>
            }            
        </tbody>
    </table>
</div>
<hr/>
<div class="row">
    <div class="col">
        <form asp-action="PlaceOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="@Model.Delivery.Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Delivery.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.Delivery.Address" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="@Model.Delivery.Address" class="form-control" ></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.Delivery.City" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Delivery.City" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.Delivery.ZipCode" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Delivery.ZipCode" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.Delivery.PhoneNumber" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.Delivery.PhoneNumber" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <input type="submit" value="Place Order" class="btn btn-primary col-sm-12" />
                </div>                
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Continue Shopping</a>
</div>

</body>
</html>
