@model OrderViewModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOrderDetail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderDetails.Product.ProductID" class="control-label"></label>
                <select asp-for="OrderDetails.Product.ProductID" class="form-control">
                    @foreach (var item in Model.ProductList)
                    {
                        <option value="@item.ProductID">@item.ProductName - @item.Description</option>
                    }
                </select>
                <span asp-validation-for="Product" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDetails.ProductQuantity" class="control-label"></label>
                <input asp-for="OrderDetails.ProductQuantity" class="form-control" />
                <span asp-validation-for="ProductQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <input asp-for="OrderDetails.OrderDetailID" class="form-control" type="hidden"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowOrders">Back to Orders</a>
</div>

</body>
</html>
